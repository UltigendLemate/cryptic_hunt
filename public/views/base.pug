      script(src="/js/vanta.waves.min.js")
      script.
        VANTA.WAVES({
            el: "#your-element-selector",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x0,
            waveHeight: 17.50,
            waveSpeed: 0.01
        })




