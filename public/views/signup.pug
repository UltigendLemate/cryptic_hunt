extends base

block content
  h1 signup
  .login-form
    form
      label.login-form__username Username
      input#username(type='text' name='username' placeholder='username' required)

      label.login-form__password Password
      input#password(type='password' name='password' placeholder='********' required)
      
      label.login-form__username Path
      input#path(type='text' name='path' placeholder='path' required)

      button(class="btn waves-effect waves-light" type="submit" name="action") Submit

block append scripts
  script(src="/js/signup.js")
